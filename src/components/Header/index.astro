---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";
import ThemeToggle from "./ThemeToggle.astro";
import logo from "./logoo.png";
const navItems = [
  { name: "Inicio", href: "#top" },
  { name: "Proyectos", href: "#projects" },
  { name: "Certificados", href: "#certificates" },
  { name: "Contactame", href: "#contact" },
];
---

<div class="header__wrapper">
  <header class="header">
    <div class="header__logo">
      <a href="#top" aria-label="Home">
        <Image src={logo} alt="Website logo" height={64} />
      </a>
    </div>
    <nav class="navigation-menu">
      <ul class="navigation-menu__list list">
        {
          navItems.map(({ name, href }) => (
            <li>
              <a href={href} class="navigation-menu__link">
                {name}
              </a>
            </li>
          ))
        }
      </ul>
      <ThemeToggle />
    </nav>
  </header>
</div>

<style lang="scss">
  @use "styles/screen";

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding-inline: 1rem;

    &__wrapper {
      position: sticky;
      top: 0;
      z-index: 2000;
      display: flex;
      justify-content: center;
      min-height: 4rem;
      background-color: var(--background);
      transition: var(--transition-smooth);

      @media (min-width: screen.$md) {
        background-color: var(--header-background);
      }
    }

    &__logo {
      display: none; // Oculto en móvil para dar espacio a navegación

      @media (min-width: screen.$md) {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
      }

      img {
        width: auto;
        height: auto;
      }
    }

    &__border-onscroll {
      box-shadow: var(--header-shadow);

      @media (min-width: screen.$md) {
        backdrop-filter: saturate(180%) blur(5px);
      }
    }

    @media (min-width: screen.$lg) {
      padding-inline: 3rem;
    }
  }

  .navigation-menu {
    display: flex;
    gap: 1rem;
    align-items: center;

    @media (min-width: screen.$md) {
      gap: 1.75rem;
    }

    ul {
      display: flex;
      gap: 0.75rem;

      @media (min-width: screen.$md) {
        gap: 1.6rem;
      }
    }

    &__link {
      position: relative;
      color: var(--accents-5);
      transition: var(--transition-smooth);
      padding-bottom: 4px;

      /* Indicador de link activo */
      &::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--primary-gradient);
        transition: var(--transition-smooth);
      }

      &:hover {
        color: var(--foreground);

        &::after {
          width: 100%;
        }
      }

      &.active {
        color: var(--primary);
        font-weight: 600;

        &::after {
          width: 100%;
        }
      }
    }
  }

  @media (min-width: screen.$md) {
    #mobile-menu-toggle {
      display: none;
    }

    .mobile-menu {
      display: none;
    }

    .navigation-menu {
      display: flex;
      gap: 1.75rem;
      align-items: center;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    function toggleMobileNav() {
      mobileMenu.forEach((el) => {
        el.classList.toggle("hidden");
        if (menuButton) {
          menuButton.ariaExpanded =
            menuButton.ariaExpanded === "false" ? "true" : "false";
        }
        document.body.style.overflow =
          document.body.style.overflow === "" ? "hidden" : "";
      });
    }
    const menuButton = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.querySelectorAll(".mobile-menu");
    menuButton && menuButton.addEventListener("click", toggleMobileNav);

    const mobileMenuLinks = document.querySelectorAll(".mobile-menu__link");

    mobileMenuLinks.forEach((link) =>
      link.addEventListener("click", toggleMobileNav),
    );

    window.addEventListener("resize", () => {
      const width = window.innerWidth;
      if (width >= 720 && document.body.style.overflow === "hidden") {
        toggleMobileNav();
      }
    });

    const headerWrapper = document.querySelector(".header__wrapper");
    const root = document.documentElement;
    onScrollHandler();

    function onScrollHandler() {
      headerWrapper?.classList.toggle(
        "header__border-onscroll",
        root.scrollTop !== 0,
      );
    }

    document.addEventListener("scroll", onScrollHandler);
  });
</script>
