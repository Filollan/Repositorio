<form method="post" id="contact-form">
  <input
    type="hidden"
    name="access_key"
    value="e0bb62ea-acf3-41ae-90e1-59d87f3f7090"
  />
  <div class="form__row">
    <label for="name">Nombre</label>
    <input id="name" name="Name" required placeholder="Pepito" />
  </div>
  <div class="form__row">
    <label for="email">Correo</label>
    <input
      id="email"
      type="email"
      name="_replyto"
      placeholder="example@example.com"
      required
    />
  </div>
  <div class="form__row">
    <label for="message">Mensaje</label>
    <textarea
      id="message"
      name="Message"
      required
      placeholder="Escriba su mensaje"></textarea>
  </div>
  <div class="form__button-wrapper">
    <button class="button button--small">Enviar</button>
  </div>
</form>

<style lang="scss">
  @use "styles/screen";

  form {
    display: flex;
    flex-direction: column;
    max-width: 500px;
    padding: 1.5rem;
    margin-block: 1.5rem;
    margin-inline: auto;
    background-color: var(--background);
    border: 1px solid var(--accents-2);
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-lg);
    transition: var(--transition-smooth);

    &:hover {
      box-shadow: var(--shadow-xl);
    }
  }

  .form {
    &__button-wrapper {
      align-self: center;

      button {
        color: hsl(0deg 0% 98%);
        background-color: hsl(109deg 53% 20%);

        &:disabled {
          cursor: not-allowed;
          background-color: hsl(0deg 0% 30%);
        }

        &:hover:enabled {
          background-color: hsl(109deg 53% 18%);
        }
      }
    }

    &__row {
      margin-bottom: 1rem;

      label {
        font-size: 14px;
        color: var(--accents-7);
      }

      input {
        width: 100%;
        padding: 0.75rem;
        color: var(--foreground);
        background-color: inherit;
        border: 2px solid var(--accents-3);
        border-radius: var(--border-radius-md);
        transition: var(--transition-smooth);
        font-size: 1rem;

        &:focus {
          outline: none;
          border-color: var(--primary);
          box-shadow: 0 0 0 3px var(--accent-glow);
        }

        &:valid:not(:placeholder-shown) {
          border-color: hsl(109, 53%, 40%);
        }

        &:invalid:not(:placeholder-shown) {
          border-color: hsl(0, 70%, 50%);
        }
      }

      input:-webkit-autofill,
      input:-webkit-autofill:hover,
      input:-webkit-autofill:focus,
      input:-webkit-autofill:active {
        background-clip: text;
        box-shadow: inset 0 0 20px 20px var(--accents-2);
        transition: background-color 5000s ease-in-out 0s;
        -webkit-text-fill-color: var(--foreground);
      }

      textarea {
        width: 100%;
        min-height: 8rem;
        padding: 0.75rem;
        color: var(--foreground);
        resize: vertical;
        background-color: inherit;
        border: 2px solid var(--accents-3);
        border-radius: var(--border-radius-md);
        transition: var(--transition-smooth);
        font-size: 1rem;
        font-family: inherit;

        &:focus {
          outline: none;
          border-color: var(--primary);
          box-shadow: 0 0 0 3px var(--accent-glow);
        }

        &:valid:not(:placeholder-shown) {
          border-color: hsl(109, 53%, 40%);
        }
      }
    }

    @media (min-width: screen.$md) {
      padding: 2rem;
    }

    @media (min-width: screen.$lg) {
      padding: 2rem 2.25rem;
    }
  }
</style>

<script>
  const form = document.getElementById(
    "contact-form",
  ) as HTMLFormElement | null;
  const submitButton: HTMLButtonElement | null = document.querySelector(
    ".form__button-wrapper button",
  );

  form?.addEventListener("submit", function (e) {
    e.preventDefault();

    if (!submitButton) return;

    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    const originalText = submitButton.innerHTML;

    // Estado de loading
    submitButton.disabled = true;
    submitButton.innerHTML = `
      <span style="display: flex; align-items: center; gap: 0.5rem;">
        <span style="display: inline-block; width: 1rem; height: 1rem; border: 2px solid #fff; border-top-color: transparent; border-radius: 50%; animation: spin 0.6s linear infinite;"></span>
        Enviando...
      </span>
    `;

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          // Éxito
          submitButton.innerHTML =
            "✓ " + (json.message || "¡Enviado con éxito!");
          submitButton.style.backgroundColor = "hsl(109, 53%, 35%)";
          form.reset();

          // Restaurar botón después de 3 segundos
          setTimeout(() => {
            submitButton.innerHTML = originalText;
            submitButton.disabled = false;
            submitButton.style.backgroundColor = "";
          }, 3000);
        } else {
          // Error
          submitButton.innerHTML = "✗ " + (json.message || "Error al enviar");
          submitButton.style.backgroundColor = "hsl(0, 70%, 45%)";
          submitButton.disabled = false;

          setTimeout(() => {
            submitButton.innerHTML = originalText;
            submitButton.style.backgroundColor = "";
          }, 3000);
        }
      })
      .catch((error) => {
        console.error(error);
        submitButton.innerHTML = "✗ Error de conexión";
        submitButton.style.backgroundColor = "hsl(0, 70%, 45%)";
        submitButton.disabled = false;

        setTimeout(() => {
          submitButton.innerHTML = originalText;
          submitButton.style.backgroundColor = "";
        }, 3000);
      });
  });

  // Añadir animación de spin para el loader
  const style = document.createElement("style");
  style.textContent = `
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  `;
  document.head.appendChild(style);
</script>
